        </activity>

        <activity android:name=".presenter.burgerchoice.BurgerChoiceActivity" />

        <activity android:name=".presenter.shoppingcart.ShoppingCartActivity" />

        <activity android:name=".presenter.ingredientlist.IngredientListActivity" />

